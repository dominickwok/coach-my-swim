<div class="container">
  <div class="lesson-card">
    <img src="https://images.unsplash.com/photo-1442458370899-ae20e367c5d8?ixlib=rb-0.3.5&s=a47dd2ce1058afa4959370155ac00c48&auto=format&fit=crop&w=2534&q=80" class="card-user-img" alt="">
    <div class="lesson-info-container">
      <h1><%= @lesson.user.email %></h1>
      <h3>Average Rating: </h3>
      <div class="lesson-info-attributes">
        <div class="box-price">
          <h3>Price</h3>
          <p>$<%=@lesson.price %>/hr</p>
        </div>
        <div class="box-ability">
          <h3>Coach Ability</h3>
          <p><%= @lesson.ability %></p>
        </div>
        <div class="box-speciality">
          <h3>Strokes Speciality</h3>
          <p><%= @lesson.speciality %></p>
        </div>
      </div>
    </div>
    <div class="lesson-nav-container">
      <%= link_to new_lesson_booking_path(@lesson) do %>
        <div class="btn btn-primary">
          Book this coach
        </div>
      <% end %>
      <div class="btn btn-primary">Leave a review</div>
      <% if @lesson.user == current_user %>
        <%= link_to edit_lesson_path do %>
          <div class="btn btn-primary">Edit Your Info</div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="content">
    <h3>About Me</h3>
    <p><%= @lesson.bio %></p>
  </div>

</div>
